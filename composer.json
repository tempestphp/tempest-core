{
    "name": "tempest/core",
    "description": "The core component of the Tempest framework.",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": "^8.4",
        "tempest/container": "1.0.0-beta.1",
        "tempest/discovery": "1.0.0-beta.1",
        "tempest/reflection": "1.0.0-beta.1",
        "tempest/support": "1.0.0-beta.1",
        "vlucas/phpdotenv": "^5.6",
        "filp/whoops": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Tempest\\Core\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tempest\\Core\\Tests\\": "tests"
        }
    }
}
